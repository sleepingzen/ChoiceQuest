<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page2_1_1_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/papertexture_"
    android:backgroundTint="#f8e7c2"
    android:backgroundTintMode="multiply"
    android:padding="16dp"
    tools:context=".Page2_1_1_1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="250dp"
        android:src="@drawable/page2_1_2_3_1_1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/pixelspace_font"
        android:padding="5dp"
        android:text="(Go fishing with the fisherman.)"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tv_page2_1_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:gravity="center"
        android:padding="16dp"
        android:background="#80000000"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pixelgame_font"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:text="You step on the boat, and sail with the fisherman.
\n\n“What’s your name, kid?” The fisherman asks, which you reply to with
\n\nThe name’s Ralph, pleasure to meet you on this fine day. Here’s your  rod *name*.
\n\nIf you catch a fish for me, I’ll reward you with coins.”  Says Ralph."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quest_font"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:text="Got any bait?"
        android:onClick="page2_1_1_1_1"/>

</LinearLayout>