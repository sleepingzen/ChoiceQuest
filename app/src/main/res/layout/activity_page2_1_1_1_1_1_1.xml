<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page2_1_1_1_1_1_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/papertexture_"
    android:backgroundTint="#f8e7c2"
    android:backgroundTintMode="multiply"
    android:padding="16dp"
    tools:context=".Page2_1_1_1_1_1_1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="250dp"
        android:src="@drawable/page2_1_2_3_1_1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"/>

    <TextView
        android:id="@+id/tv_page2_1_1_1_1_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#80000000"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pixelgame_font"
        android:textSize="25sp"
        android:text="You and Ralph get back to town and sell the treasure.\n\nWithout knowing what to do with the treasure you sold, Ralph suggests that the two of you become merchants and join forces to monopolize the market."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quest_font"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:text="Accept Ralph’s suggestion."
        android:onClick="page2_1_1_1_1_1_1_1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quest_font"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:text="Decline Ralph’s request, but become a merchant yourself."
        android:onClick="page2_1_1_1_1_1_1_2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quest_font"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:text="Decline Ralph’s request and spend all your earnings on booze and parties."
        android:onClick="page2_1_1_1_1_1_1_3" />
</LinearLayout>