<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page2_1_1_1_1_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/papertexture_"
    android:backgroundTint="#f8e7c2"
    android:backgroundTintMode="multiply"
    android:padding="16dp"
    tools:context=".Page2_1_1_1_1_1">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="250dp"
        android:src="@drawable/page2_1_2_3_1_1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pixelspace"
        android:gravity="center"
        android:padding="5dp"
        android:text="(*Your fishing rod shakes… Something has caught on!*)"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <TextView
        android:id="@+id/tv_page2_1_1_1_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#80000000"
        android:fontFamily="@font/pixelgame_font"
        android:text="You pull and tug the fishing rod, whatever has caught on feels heavy enough that you start to sweat.\n\nRalph helps you pull it out of the water, and surprisingly, it is a chest filled with treasure!\n\nRalph jumps happily, almost turning the boat over, hugging you in the midst of it, and shouts “We’re rich!”"
        android:textColor="#FFFFFF"
        android:textSize="23sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quest_font"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:text="Split the treasure with Ralph."
        android:onClick="page2_1_1_1_1_1_1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quest_font"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:text="Push Ralph off the boat and take the treasure for yourself."
        android:onClick="page2_1_1_1_1_1_2"/>

</LinearLayout>